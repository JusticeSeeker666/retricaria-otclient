SoulLabel < GameLabel
  id: soulLabel
  text-align: center
  color: white
  font: cipsoftFont
  anchors.bottom: soulPanel.bottom
  anchors.right: soulPanel.right
  anchors.left: soulPanel.left
  margin-bottom: -1
  on: true

  $!on:
    visible: false
    margin-top: 0
    height: 0

CapLabel < GameLabel
  id: capLabel
  text-align: center
  color: white
  font: cipsoftFont
  anchors.bottom: capPanel.bottom
  anchors.right: capPanel.right
  anchors.left: capPanel.left
  margin-bottom: -1
  on: true

  $!on:
    visible: false
    margin-top: 0
    height: 0

SoulTitle < GameLabel
  id: soulTitle
  text: Soul:
  text-align: center
