ConditionWidget < UIWidget
  margin-bottom: 2
  width: 10

  $!first:
    margin-left: 1

SpecialMiniWindow
  id: inventoryWindow
  height: 171
  @onClose: modules.game_inventory.onMiniWindowClose()
  &save: true
  &notMinimize: true

  MiniWindowContents

    HeadSlot
      anchors.top: parent.top
      anchors.left: parent.left
      margin-left: 40
      margin-top: 3

    BodySlot
      anchors.top: prev.bottom
      anchors.horizontalCenter: prev.horizontalCenter
      margin-top: 3

    LegSlot
      anchors.top: prev.bottom
      anchors.horizontalCenter: prev.horizontalCenter
      margin-top: 3

    FeetSlot
      anchors.top: prev.bottom
      anchors.horizontalCenter: prev.horizontalCenter
      margin-top: 3

    NeckSlot
      anchors.top: slot1.top
      anchors.right: slot1.left
      margin-top: 13
      margin-right: 4

    LeftSlot
      anchors.top: prev.bottom
      anchors.horizontalCenter: prev.horizontalCenter
      margin-top: 3

    FingerSlot
      anchors.top: prev.bottom
      anchors.horizontalCenter: prev.horizontalCenter
      margin-top: 3

    SoulPanel
      id: soulPanel
      anchors.top: prev.bottom
      anchors.left: parent.left
      margin-top: 3
      margin-left: 3

    BackSlot
      anchors.top: slot1.top
      anchors.left: slot1.right
      margin-top: 13
      margin-left: 3

    RightSlot
      anchors.top: prev.bottom
      anchors.horizontalCenter: prev.horizontalCenter
      margin-top: 3

    AmmoSlot
      anchors.top: prev.bottom
      anchors.horizontalCenter: prev.horizontalCenter
      margin-top: 3

    CapPanel
      id: capPanel
      anchors.top: prev.bottom
      anchors.left: prev.left
      margin-top: 2
      margin-right: 17

    SoulTitle
    SoulLabel
    CapTitle
    CapLabel

    Panel
      id: conditionPanel
      layout:
        type: horizontalBox
      image-source: /images/game/slots/conditionPanel
      height: 13
      margin-top: 3
      margin-right: 73
      anchors.top: soulPanel.bottom
      anchors.left: soulPanel.left
      anchors.right: parent.right
      border-color: black

    FightOffensiveBox
      id: fightOffensiveBox
      anchors.top: parent.top
      anchors.right: parent.right
      margin-top: 16
      margin-right: 29

    FightBalancedBox
      id: fightBalancedBox
      anchors.top: parent.top
      anchors.right: parent.right
      margin-top: 37
      margin-right: 29

    FightDefensiveBox
      id: fightDefensiveBox
      anchors.top: parent.top
      anchors.right: parent.right
      margin-top: 57
      margin-right: 29

    StandModeBox
      id: standModeBox
      anchors.top: parent.top
      anchors.right: parent.right
      margin-top: 16
      margin-right: 6
  
    ChaseModeBox
      id: chaseModeBox
      anchors.top: parent.top
      anchors.right: parent.right
      margin-top: 36
      margin-right: 6

    SafeFightBox
      id: safeFightBox
      anchors.top: parent.top
      anchors.right: parent.right
      margin-top: 57
      margin-right: 6

  Button
    id: stopButton
    font: cipsoftFont
    !text: tr('Stop')
    anchors.top: parent.top
    anchors.right: parent.right
    margin-top: 83
    margin-right: 10
    size: 43 20
    @onClick: function() g_game.cancelAttackAndFollow() end

  Button
    id: optionsButton
    font: cipsoftFont
    !text: tr('Options')
    anchors.top: parent.top
    anchors.right: parent.right
    margin-top: 100
    margin-right: 10
    size: 43 20
    @onClick: modules.client_options.toggle()

  Button
    id: hotkeysButton
    font: cipsoftFont
    !text: tr('Hotkeys')
    anchors.top: optionsButton.bottom
    anchors.right: parent.right
    margin-top: 3
    margin-right: 10
    size: 43 20
    @onClick: modules.game_hotkeys.toggle()

  Button
    id: questButton
    font: cipsoftFont
    !text: tr('Quests')
    anchors.top: hotkeysButton.bottom
    anchors.right: parent.right
    margin-top: 3
    margin-right: 10
    size: 43 20
    @onClick: g_game.requestQuestLog()

  UIButton
    id: minButton
    anchors.top: parent.top
    anchors.left: parent.left
    margin-top: 4
    margin-left: 6
    size: 14 14
    image-source: /images/ui/miniwindow_buttons
    image-clip: 0 0 14 14
    @onClick: onInventoryMinimize(not self:isOn())

    $hover:
      image-clip: 0 14 14 14

    $pressed:
      image-clip: 0 28 14 14

    $on:
      image-clip: 14 0 14 14

    $on hover:
      image-clip: 14 14 14 14

    $on pressed:
      image-clip: 14 28 14 14
